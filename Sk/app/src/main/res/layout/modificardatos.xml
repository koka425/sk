<?xml version="1.0" encoding="utf-8"?>
        <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.javogx.sk.Important.Modify"
        tools:showIn="@layout/modificarinter">
    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Nombre del producto"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/et1"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Precio del producto"
            android:inputType="number" />

        <Button
            android:id="@+id/bFototeca2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#7E57C2"
            android:padding="10dp"
            android:text="Seleccionar"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/et2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/bCamara2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="#7E57C2"
            android:padding="10dp"
            android:text="Tomar Foto"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/et2"
            android:layout_marginTop="16dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="34dp" />

        <TextView
            android:id="@+id/tvUrl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bFototeca"
            android:text="URL:"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ivFoto2"
            android:layout_width="match_parent"

            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/bCamara2"
            android:layout_marginTop="15dp" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
